<div class="method-card method-<%= method['scope'] %><%= ' has-docs' if method['has_content'] %>" id="<%= method_anchor(method) %>">
  <h3><a href="#<%= method_anchor(method) %>" class="anchor-link"><%= h method['signature'] %></a></h3>
  <% unless method['docstring'].to_s.empty? %>
  <%= md(method['docstring']) %>
  <% end %>
  <%= render_tags(method['tags']) %>
  <% if method['source'] %>
  <details class="method-source">
    <summary>View source <span class="source-chevron">â–¼</span></summary>
    <div class="source-content">
      <% if method_cov %><div class="source-coverage"><span class="coverage-badge coverage-<%= method_coverage_level %>"><%= method_cov == method_cov.to_i ? method_cov.to_i : method_cov %>% covered</span></div><% end %>
      <pre><code class="language-ruby"><%= h method['source'] %></code></pre>
    </div>
  </details>
  <% end %>
</div>
